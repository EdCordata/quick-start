%nav.navbar.navbar-expand-lg.navbar-light.bg-light

  %a.navbar-brand{href: "#"}= t('overall.name')

  %button.navbar-toggler{'aria-controls':  'navbarMainMenuContent',
                          'aria-expanded': false,
                          'data-target':   '#navbarMainMenuContent',
                          'data-toggle':   'collapse',
                          'aria-label':    'Toggle navigation',
                          type:            'button'}
    %span.navbar-toggler-icon

  #navbarMainMenuContent.collapse.navbar-collapse

    %ul.navbar-nav.mr-auto
      %li.nav-item= link_to t('views.header.links.home'), root_path, class: 'nav-link'

    %ul.navbar-nav.ml-auto
      - if current_user

        %li.nav-item= link_to current_user.email, '#', class: 'nav-link'

        = render partial: '_shared/header_language_switch_item'

        %li.nav-item= link_to t('views.header.links.sign_out'), sign_out_path, class: 'nav-link'

      - else
        %li{class: "nav-item #{header_active_item(:sign_in)}"}= link_to t('views.header.links.sign_in'), sign_in_path, class: 'nav-link'

        %li{class: "nav-item #{header_active_item(:sign_up)}"}= link_to t('views.header.links.sign_up'), sign_up_path, class: 'nav-link'

        = render partial: '_shared/header_language_switch_item'
