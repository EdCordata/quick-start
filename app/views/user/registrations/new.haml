.container
  = simple_form_for @user, url: sign_up_post_path, method: :post do |f|
    %div{style: 'max-width: 500px; margin: 50px auto;'}
      .card.p-20
        = f.input :email
        = f.input :password
        = f.input :password_confirmation
        = f.input :locale, collection: User.locale.options, include_blank: false
      = f.submit t('views.user.registrations.sign_up'), class: 'btn btn-primary mt-20'
