.container
  = simple_form_for User.new, url: sign_in_post_path, method: :post do |f|
    %div{style: 'max-width: 500px; margin: 50px auto;'}
      .card.p-20
        = f.input :email,    required: false
        = f.input :password, required: false
      = f.submit t('views.user.sessions.sign_in'), class: 'btn btn-primary mt-20'
